app-id: com.github.{{ metadata.github_username }}.AIAutoCommit
runtime: {{ metadata.flatpak.runtime if metadata.get("flatpak") else "org.freedesktop.Platform" }}
runtime-version: '{{ metadata.flatpak.runtime_version if metadata.get("flatpak") else "23.08" }}'
sdk: org.freedesktop.Sdk
command: autocommit
finish-args:
  - --share=network
  - --filesystem=host
  - --share=ipc
  - --socket=fallback-x11
  - --socket=wayland
  - --device=dri
  - --talk-name=org.freedesktop.secrets
  - --filesystem=xdg-config/ai_auto_commit:create
modules:
  - name: python3-pip
    buildsystem: simple
    build-commands:
      - pip3 install --exists-action=i --no-index --find-links="file://${PWD}" --prefix=${FLATPAK_DEST} pip setuptools wheel
    sources:
      - type: file
        url: https://files.pythonhosted.org/packages/source/p/pip/pip-23.3.1.tar.gz
        sha256: REPLACE_WITH_ACTUAL_SHA256

  - name: ai-auto-commit
    buildsystem: simple
    build-commands:
      - pip3 install --no-index --find-links="file://${PWD}" --prefix=${FLATPAK_DEST} .
    sources:
      - type: archive
        url: https://files.pythonhosted.org/packages/source/a/ai-auto-commit/ai-auto-commit-{{ metadata.version }}.tar.gz
        sha256: {{ metadata.checksums.sha256 or 'REPLACE_WITH_ACTUAL_SHA256' }}

      # Python dependencies (checksums need to be updated manually)
{% for dep in metadata.dependencies %}
      - type: file
        url: https://files.pythonhosted.org/packages/source/{{ dep[0] }}/{{ dep }}/{{ dep }}-VERSION.tar.gz
        sha256: REPLACE_WITH_ACTUAL_SHA256
{% endfor %}
